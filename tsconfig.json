{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "lib": ["DOM"],
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,

        "strictNullChecks": true,
        "removeComments": true,
        "sourceMap": true,
        "moduleResolution": "node",

    },
    "exclude": [
        "node_modules",
        "build",
        "vendor",
        "server",
        "third_party",
        "legacy"
    ],
    "types": [
        "webpack-env"
    ]
}